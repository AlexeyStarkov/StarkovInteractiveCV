<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mainPage="clr-namespace:StarkovInteractiveCV.VisualElements.Pages.MainPage"
             xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
             xmlns:ffimagesvg="clr-namespace:FFImageLoading.Svg.Forms;assembly=FFImageLoading.Svg.Forms"
             x:DataType="mainPage:MainPageViewModel"
             x:Class="StarkovInteractiveCV.VisualElements.Pages.MainPage.MainPage">
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="StackLayout" x:Key="SatelliteStackStyle">
                <Setter Property="Spacing" Value="5"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style TargetType="Frame" x:Key="SatelliteIconFrameStyle">
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="WidthRequest" Value="50"/>
                <Setter Property="CornerRadius" Value="25"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="BackgroundColor" Value="DarkRed"/>
            </Style>
            <Style TargetType="ffimagesvg:SvgCachedImage" x:Key="SatelliteIconSvgStyle">
                <Setter Property="HeightRequest" Value="20"/>
                <Setter Property="Aspect" Value="AspectFit"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
            <Style TargetType="Label" x:Key="SatelliteTextStyle">
                <Setter Property="HorizontalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid>
        <ScrollView x:Name="Scroll" VerticalScrollBarVisibility="Never">
            <StackLayout x:Name="ScrollableStack">
                <BoxView Color="Aqua" HeightRequest="200"/>
                <BoxView Color="Black" HeightRequest="200"/>
                <BoxView Color="DarkRed" HeightRequest="200"/>
                <BoxView Color="Brown" HeightRequest="200"/>
                <BoxView Color="Aqua" HeightRequest="200"/>
                <BoxView Color="MistyRose" HeightRequest="200"/>
                <BoxView Color="Aqua" HeightRequest="200"/>
                <BoxView Color="Green" HeightRequest="200"/>
                <BoxView Color="Aqua" HeightRequest="200"/>
                <BoxView Color="Yellow" HeightRequest="200"/>
                <BoxView Color="Aqua" HeightRequest="200"/>
                <BoxView Color="Azure" HeightRequest="200"/>
                <BoxView Color="Aqua" HeightRequest="200"/>
            </StackLayout>
        </ScrollView>
        <Grid x:Name="HeaderGrid" VerticalOptions="Start" BackgroundColor="DarkGray">
            <Frame x:Name="HobbiesButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}" BackgroundColor="White">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="WorkflowButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}" BackgroundColor="Green">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="DevSkilsButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="ToolsButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="ContactButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="SocialButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="LanguagesButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="PersonalityButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            <Frame x:Name="ProfileButtonFrame" Style="{StaticResource SatelliteIconFrameStyle}">
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding OpenProfileCommand}"/>
                </Frame.GestureRecognizers>
                <ffimagesvg:SvgCachedImage Style="{StaticResource SatelliteIconSvgStyle}"/>
            </Frame>
            
            <ffimage:CachedImage HeightRequest="200" WidthRequest="200" VerticalOptions="Center" HorizontalOptions="Center" Aspect="AspectFit" BackgroundColor="Pink" />
        </Grid>
    </Grid>
</ContentPage>
